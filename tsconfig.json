{
  "include": ["./src/**/*"],
  "exclude": ["./types/*.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom"],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}